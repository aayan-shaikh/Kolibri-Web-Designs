<!DOCTYPE html>
<html lang="{{ lang | default: 'en' }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}">
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
    <header class="navbar">
        <div class="container">
            <a href="{{ homeLink | default: '/' }}" class="navbar__logo">
                <img src="/images/logo.svg" alt="Kolibri Logo">
            </a>
            <nav class="navbar__nav">
                <ul class="navbar__menu">
                    <li><a href="{{ homeLink | default: '/' }}" {% if page.url == '/' %}class="active"{% endif %}>{{ homeText | default: 'Home' }}</a></li>
                    <li><a href="{{ servicesLink | default: '/services.html' }}" {% if page.url == '/services.html' %}class="active"{% endif %}>{{ servicesText | default: 'Services' }}</a></li>
                    <li><a href="{{ portfolioLink | default: '/portfolio.html' }}" {% if page.url == '/portfolio.html' %}class="active"{% endif %}>{{ portfolioText | default: 'Portfolio' }}</a></li>
                    <li><a href="{{ aboutLink | default: '/about.html' }}" {% if page.url == '/about.html' %}class="active"{% endif %}>{{ aboutText | default: 'About' }}</a></li>
                    <li><a href="{{ contactLink | default: '/contact.html' }}" {% if page.url == '/contact.html' %}class="active"{% endif %}>{{ contactText | default: 'Contact' }}</a></li>
                </ul>
                <a href="{{ ctaLink | default: '/contact.html' }}" class="navbar__cta">{{ ctaText | default: 'Get Started' }}</a>
            </nav>
        </div>
    </header>

    <main>
        {{ content | safe }}
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer__content">
                <div class="footer__brand">
                    <img src="/images/logo.svg" alt="Kolibri Logo" class="footer__logo">
                    <p>{{ footerDescription | default: 'Creating beautiful, functional websites that help businesses grow.' }}</p>
                </div>
                <div class="footer__links">
                    <div class="footer__section">
                        <h3>{{ servicesTitle | default: 'Services' }}</h3>
                        <ul>
                            {% for service in services %}
                            <li><a href="{{ service.link }}">{{ service.title }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="footer__section">
                        <h3>{{ contactTitle | default: 'Contact' }}</h3>
                        <p>{{ address | default: '123 Web Street, Digital City' }}</p>
                        <p>{{ email | default: 'hello@kolibri.com' }}</p>
                        <p>{{ phone | default: '+1 234 567 890' }}</p>
                    </div>
                </div>
            </div>
            <div class="footer__bottom">
                <p>&copy; {{ currentYear }} {{ companyName | default: 'Kolibri Web Designs' }}. {{ rightsText | default: 'All rights reserved.' }}</p>
                <div class="footer__legal">
                    <a href="{{ privacyLink | default: '/privacy.html' }}">{{ privacyText | default: 'Privacy Policy' }}</a>
                    <a href="{{ termsLink | default: '/terms.html' }}">{{ termsText | default: 'Terms of Service' }}</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="/scripts/navbar.js"></script>
    <script>
        if (window.netlifyIdentity) {
            window.netlifyIdentity.on("init", user => {
                if (!user) {
                    window.netlifyIdentity.on("login", () => {
                        document.location.href = "/admin/";
                    });
                }
            });
        }
    </script>
</body>
</html> 